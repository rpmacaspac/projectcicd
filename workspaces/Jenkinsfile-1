

pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: kaniko
  namespace: devops-tools
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    imagePullPolicy: Always
    command:
      - cat
    tty: true
    volumeMounts:
    - name: kaniko-secret
      mountPath: /kaniko/.docker
  restartPolicy: Never
  volumes:
  - name: kaniko-secret
    secret:
      secretName: regcred
      items:
        - key: .dockerconfigjson
          path: config.json
    '''
    }
  }

  environment {
    BUILD_NUMBER = sh ( 'cat "build_number.txt"' )
  }

  stages {
    stage("Build"){
        steps {
            container(name: 'kaniko', shell: '/busybox/sh'){
              script {
                sh """
                /kaniko/executor --context . \
                  --destination "rpmacaspac/devops-toolkit:${BUILD_NUMBER}" \
                  --cache=true
                  """
              }
            }
        }
    }
  }

}