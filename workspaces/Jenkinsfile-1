

pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: kaniko
  namespace: devops-tools
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    imagePullPolicy: Always
    args:
    - "--context=git://github.com/rpmacaspac/projectcicd"
    - "--destination=rpmacaspac/devops-toolkit:1.3"
    - "--cache=true"
    volumeMounts:
    - name: kaniko-secret
      mountPath: /kaniko/.docker
  restartPolicy: Never
  volumes:
  - name: kaniko-secret
    secret:
      secretName: regcred
      items:
        - key: .dockerconfigjson
          path: config.json
    '''
    }
  }

  environment {
    BUILD = sh ( 'cat "build_number.txt"' )
  }

  stages {
    stage("Test"){
        steps {
            container('jnlp'){
              sh 'pwd && ls'
              sh 'cat /etc/*-release'
              echo "${BUILD}"

            }
        }
    }
  }

}