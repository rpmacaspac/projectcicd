

pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: kaniko
  namespace: devops-tools
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    imagePullPolicy: Always
    command:
      - cat
    tty: true
  restartPolicy: Never
    '''
    }
  }


  stages {
    stage("Set Parameters"){
      steps {
        container("jnlp"){
          script {
            BUILD_NUMBER = sh (
              script: "cat build_number.txt",
              returnStdout: true
            ).trim()
          }
        }
      }
    }


    stage("Build Image"){
      steps {
          container(name: 'kaniko', shell: '/busybox/sh'){
            script {
              sh 'ls /kaniko/.docker'

              withCredentials([file(credentialsId: 'docker-config', variable: 'regcred')]) {
                sh 'cp "${regcred}" /kaniko/.docker/config.json'

                sh """/kaniko/executor --context . \
                  --destination "ireborn/projectcicd/devops-toolkit:${BUILD_NUMBER}" \
                  --cache=true
                  """
              }
            }
          }
      }
    }
  }

}