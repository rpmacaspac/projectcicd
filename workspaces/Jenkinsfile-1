

pipeline {
  agent {
    kubernetes {
      yaml '''
      apiVersion: v1
      kind: Pod
      metadata:
        name: kaniko
        namespace: devops-tools
      spec:
        containers:
        - name: kaniko
          image: gcr.io/kaniko-project/executor:latest
          args:
          - "--context=git//github.com/rpmacaspac/projectcicd"
          - "--dockerfile=workspaces/Dockerfile"
          - "--destination=rpmacaspac/devops-toolkit:1.1.0"
          volumeMounts:
          - name: kaniko-secret
            mountPath: /kaniko/.docker
        volumes:
        - name: kaniko-secret
          secret:
            secretName: regcred
            items:
            - key: .dockerconfigjson
              path: config.json
        '''
    }
  }


  stages {
    stage("Test"){
        steps {
            container('kaniko'){
              sh 'ls workspaces/'
            }

        }
    }
  }

}