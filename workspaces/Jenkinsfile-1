

pipeline {
  agent {
    kubernetes {
      yaml '''
      apiVersion: v1
      kind: Pod
      metadata:
        name: kaniko
      spec:
        containers:
        - name: kaniko
          image: gcr.io/kaniko-project/executor:latest
          args:
          - "--context=dir:///workspace/"
          - "--dockerfile=Dockerfile"
          - "--destination=rpmacaspac/kaniko-demo-image:1.0"
          volumeMounts:
          - name: kaniko-secret
            mountPath: /kaniko/.docker
          - name: context
            mountPath: /workspace
        restartPolicy: Never
        volumes:
        - name: kaniko-secret
          secret:
            secretName: regcred
            items:
              - key: .dockerconfigjson
                path: config.json
        - name: context
          hostPath:
            path: /home/ireborn/repo/projectcicd/kaniko
        '''
    }
  }


  stages {
    stage("Test"){
        steps {
            container('kaniko'){
              sh 'ls workspaces/'
            }

        }
    }
  }

}